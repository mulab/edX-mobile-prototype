      <choicegroup type="MultipleChoice">
        <choice location="random" correct="false" name="1">
          <text>
            <span>(i) and (ii) only</span>
          </text>
        </choice>
        <choice location="random" correct="true" name="2">
          <text>
            <span>(ii) and (iv) only</span>
          </text>
        </choice>
        <choice location="random" correct="false" name="3">
          <text>
            <span>(i), (ii), and (iv)</span>
          </text>
        </choice>
        <choice location="random" correct="false" name="4">
          <text>
            <span>(iii) and (iv) only</span>
          </text>
        </choice>
      </choicegroup>
    </multiplechoiceresponse>
  </text>
